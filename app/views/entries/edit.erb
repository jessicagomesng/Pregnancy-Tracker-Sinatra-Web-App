<h2>Edit or Delete Your Entry Below:</h2> 

  <form action='/entries/<%= @entry.id %>' method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH"> 
    <label for="date">Date:</label>
    <input type="date" id="date" name="entry[date]" value="<%= @entry.date %>" required>

    <label for="temperature">Temperature in &deg;C:</label> &#9432; <!-- make a tooltip here -->
    <input type="number" step="0.01" placeholder="0.00" name="entry[temperature]" value="<%= @entry.temperature %>"><br><br> 

    <label for="weight">Weight in kg:</label>
    <input type="number" step="0.1" placeholder="0.0" name="entry[weight]" value="<%= @entry.weight %>"><br><br>

    <label for="weeks">Number of weeks:</label> &#9432; <!-- make a tooltip here -->
    <input type="number" min="1" max="42" name="entry[weeks]" id="weeks" value="<%= @entry.weeks %>" required><br><br> 

    <label for="symptoms">Choose a symptom from the list below, or create your own:</label><br><br>
    <% @symptoms.each do |symptom| %>
        <input type="checkbox" id="symptom_<%= symptom.id %>" name="entry[symptom_ids][]" value="<%= symptom.id %>" <%='checked' if @entry.symptoms.include?(symptom) %>"><%= symptom.name.capitalize %></input><br>
    <% end %> 

    <label for="new_symptom">New Symptom:</label>
    <input type="text" id="new_symptom" name="new_symptom"><br>

    <label for="notes">Notes:</label> 
    <textarea id="notes" name="entry[notes]" rows="4" cols="50"><%= @entry.notes %></textarea><br><br> 

    <label for="to_dos">To Do:</label> 
    <textarea id="to_dos" name="entry[to_dos]" rows="4" cols="50"><%= @entry.to_dos %></textarea><br><br>  

    <input type="submit" value="Edit Entry" id="submit">
  </form>

  <form action="/entries/<%= @entry.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <br>or <input type="submit" value="Delete Entry"> 
  </form> 

<a href="/entries/<%= @entry.id %>">Cancel</a> or <a href="/account">Account</a>